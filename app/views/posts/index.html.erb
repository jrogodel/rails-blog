
	<h1 id="page_title">Articles</h1>

	<div class="wrapper_post wrapper_skinny">

		<div class="post">
			<% @posts.each do |post| %>
				<p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>
				<h3><%= link_to post.title, post, class: "link" %></h3>
				<hr>
			<% end %>
	 	</div>

		<!-- Pagination Gem -->
	 	<div class="pagination">
	 		<span class="previous_page disabled">Previous</span>
	 		<em class="current">1</em>
	 		<a rel="next" href="#">2</a>
	 		<a class="next_page" href="#">Next</a>
	 	</div>


	</div> 

